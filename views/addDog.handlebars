<div class="d-flex justify-content-center">    
    <div class="signup-card">
        <h2 class="page-title login-margin">Add A Dog</h2>
        <form class="form login-form d-flex flex-column justify-content-center align-items-center">
            <div class="form-group d-flex flex-column justify-content-center align-items-center">
              <label for="dog-name">Dogs Name</label>
              <input class="form-input" type="text" id="dog-name"/>
            </div>
            <div class="form-group">
              <label for="gender">Gender</label>
              <select name="dog-gender" id="dog-gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
              </select>
            </div>
            <div class="form-group d-flex flex-column justify-content-center align-items-center">
              <label for="dog-age">Age</label>
              <input class="form-input" type="number" id="dog-age" />
            </div>
            <div class="form-group d-flex flex-column justify-content-center align-items-center">
              <label for="dog-breed">Breed</label>
              <input class="form-input" type="text" id="dog-breed" />
            </div>
            <div class="form-group">
              <label for="dog-size">Size</label>
              <select name="dog-size" id="dog-size">
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
                <option value="Large">Large</option>
                <option value="X-Large">X-Large</option>
              </select>
            </div>
            <div class="form-group">
              <label for="dog-info">Additional Info</label>
              <textarea class="form-input" type="text" id="dog-info"></textarea>
            </div>            
            <button class="homeButton" type="submit">Add Dog</button>            
        </form>
    </div>
</div>  