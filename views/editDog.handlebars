
<div class="d-flex justify-content-center">    
    <div class="signup-card">
        <h2 class="page-title login-margin">Update A Dog</h2>
        <form class="login-form d-flex flex-column  ">
          <div class="form-group d-flex row">
            <div class="col">
              <input id="dogID" value={{dogData.id}} class="hide dogID"></input>
              <label for="dog-name ageBox">Name</label>
              <input class="form-input labelBox" type="text" id="dog-name" value={{dogData.dog_name}} />
            </div>
            <div class="col">
              <label for="dog-age ">Age</label>
              <input class="form-input labelBox" type="number" id="dog-age" value={{dogData.age}} />
            </div>
          </div>
          <div class="form-group d-flex row">
            <div class="col">
            <label for="gender">Gender</label><br>
            <select class="labelBox" name="dog-gender" id="dog-gender">
              <option selected value={{dogData.gender}}>{{dogData.gender}}</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
            </select>
            </div>
            <div class="col">
            <label for="dog-size">Size</label><BR>
              <select class="labelBox" name="dog-size" id="dog-size">
                <option selected value={{dogData.size}}>{{dogData.size}}</option>
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
                <option value="Large">Large</option>
                <option value="X-Large">X-Large</option>
              </select>
            </div>
          </div>
            
            <div class="form-group d-flex row">
              <div class="col-6">
              <label for="dog-breed labelBox">Breed</label>
              <input class="form-input labelBox" type="text" id="dog-breed" value={{dogData.breed}} />
              </div>
            </div>
            <div class="form-group">
              
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="form-group inputBox d-flex flex-column justify-content-center align-items-center">
              <label for="dog-info">Additional Info</label>
              <textarea class="form-input dog-info" type="text" id="dog-info">{{dogData.note}}</textarea>
            </div>
            </div>            
            <a href="" id="updateBtn" class="homeButton" >Update Dog</a>
            <a href="" id="deleteBtn" class="homeButton" >Delete Dog</a>             
        </form>
    </div>
</div>  
<script src="/js/edit-doggy.js"></script>
<script src="/js/delete-doggy.js"></script>