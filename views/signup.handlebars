<div class="d-flex justify-content-center">    
        <div class="signup-card">
          <h2 class="page-title login-margin">Sign Up</h2>
          <form class="form login-form d-flex flex-column justify-content-center align-items-left">
            <div class="form-group">
              <label for="email-login">Email</label>
              <input class="form-input" type="email" id="email-login" />
            </div>
            <div class="form-group">
              <label for="fName-login">First Name</label>
              <input class="form-input" type="text" id="fName-login" />
            </div>
            <div class="form-group">
              <label for="lName-login">Last Name</label>
              <input class="form-input" type="text" id="lName-login" />
            </div>
            <div class="form-group">
              <label for="phone-login">Phone Number</label>
              <input class="form-input" type="tel" id="phone-login" />
            </div>
            <div class="form-group">
              <label for="address-login">Address</label>
              <input class="form-input" type="text" id="address-login" />
            </div>
            <div class="form-group">
              <label for="password-login">Password</label>
              <input class="form-input" type="password" id="password-login" />
            </div>
            <div class="form-group d-flex">
              <button class="loginButton" type="submit">Sign Up</button>
            </div>
          </form>
        </div>
      </div>